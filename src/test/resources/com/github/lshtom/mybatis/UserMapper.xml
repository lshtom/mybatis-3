<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.lshtom.mybatis.mapper.UserMapper">
	
	<insert id="insertUser" parameterType="com.github.lshtom.mybatis.model.User">
		INSERT INTO user(name,age,sex) VALUES (#{name},#{age},#{sex})
	</insert>
	
	<select id="getUser" resultType="com.github.lshtom.mybatis.model.User" parameterType="integer">
		SELECT * FROM user WHERE id=#{id}
	</select>
</mapper>